<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_texture"
    tools:context="kaylamacfarlane.cuttingboard.Add_Recipe">

    <LinearLayout
        android:id="@+id/mainLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="#55fefee7" >

     <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content"
        android:background="#6f272727"
        android:layout_weight=".50">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    </LinearLayout>



    </ScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Recipe Title:"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/Title_editText"
            android:layout_alignParentStart="true"
            android:background="#00ffffff" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Title_editText"
            android:minWidth="280dp"
            android:height="40dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:minHeight="150dp"
            android:minWidth="150dp"

            android:layout_below="@+id/textButton"
            android:layout_toEndOf="@+id/textView2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Prep Time:"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/ptime_editText"
            android:height="30dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignStart="@+id/cTime_editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cook Time:"
            android:id="@+id/textView3"
            android:layout_below="@+id/ptime_editText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/cTime_editText"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Time:"
            android:id="@+id/textView4"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/cTime_editText"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/tTime_editText"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ingredients:"
            android:id="@+id/textView5"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/Ingredients_editText"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/Ingredients_editText"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Directions:"
            android:id="@+id/textView6"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/Directions_editText"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Directions_editText"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/textView6" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/saved"
            android:text="Save Recipe"
            android:onClick="Recipe saved"
            android:layout_alignBottom="@+id/Directions_editText"
            android:layout_toEndOf="@+id/Directions_editText"/>



    </LinearLayout>

</ScrollView>


