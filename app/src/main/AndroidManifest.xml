<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kaylamacfarlane.cuttingboard" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Add_Recipe"
            android:label="@string/title_activity_add__recipe" >
        </activity>
        <activity
            android:name=".Conversion_Chart"
            android:label="@string/title_activity_conversion__chart" >
        </activity>
        <activity
            android:name=".Explore"
            android:label="@string/title_activity_explore" >
        </activity>
        <activity
            android:name=".Recipe_Box"
            android:label="@string/title_activity_recipe__box" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ConversionChart"
            android:label="@string/title_activity_conversion_chart" >
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".Recipe"
            android:label="@string/title_activity_recipe" >
        </activity>
        <activity
            android:name=".Conversion_Tool"
            android:label="@string/title_activity_conversion__tool" >
        </activity>
        <activity
            android:name=".Recipe_Module"
            android:label="@string/title_activity_recipe__module" >
        </activity>

    </application>

</manifest>
